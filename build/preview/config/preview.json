{
  "env": "production",
  "http": {
    "ip": "0.0.0.0",
    "port": 9000
  },
  "database": {
    "host": "mongodb",
    "port": 27017,
    "name": "pryv-node"
  },
  "eventFiles": {
    "attachmentsDirPath": "/app/data/attachments",
    "previewsDirPath": "/app/data/previews"
  },
  "auth": {
    "sessionMaxAge": 1209600000
  },
  "logs": {
    "console": {
      "active": true,
      "level": "info",
      "colorize": false
    },
    "file": {
      "active": true,
      "level": "error",
      "path": "/app/log/previews.log",
      "maxFileBytes": 4096,
      "maxNbFiles": 20
    }
  }
}
