#!/usr/bin/env node

// Binary for launching the api-server process. 

const Server = require('../src/server');
const Settings = require('../src/settings');

// This bit is useful to trace down promise rejections that aren't caught. 
process.on('unhandledRejection', (reason, promise) => {
  console.warn('Unhandled promise rejection:', promise, 'reason:', reason.stack || reason); // eslint-disable-line no-console
});

// Load settings
const settings = Settings.load(); 

// Start the server
const server = new Server(settings); 
const result = server.start();

// Make sure we catch top-level exceptions.
result.catch(e => console.error(e)); // eslint-disable-line no-console
